<div class="updateUser">
    <div>
        <i class="glyphicon glyphicon-remove"></i>
        <form method="post" enctype="multipart/form-data" action="/api/update">
            <table>
                <tr>
                    <td>用户名 :</td>
                    <td>
                        <input type="text" pattern="^[a-zA-Z0-9_]{5,16}$" required name="user_name" readonly>
                    </td>
                </tr>
                <tr>
                    <td>密&emsp;码 :</td>
                    <td>
                        <input type="password" pattern="^[a-zA-Z0-9_]{5,16}$" required name="user_psw">
                    </td>
                </tr>
                <tr>
                    <td>手机号 :</td>
                    <td>
                        <input type="tel" required name="user_tel">
                    </td>
                </tr>
                <tr>
                    <td>头&emsp;像 :</td>
                    <td>
                        <input type="file" required name="user_pic">
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td><button class="btn btn-default ">确认修改</button></td>
                </tr>
            </table>
        </form>
    </div>
</div>